// Maximum product subarray - easy - 12/08/2023

  public int maxProduct(int[] nums) {
      int n = nums.length;
        
      int max = Integer.MIN_VALUE;
      int pre = 1, suf = 1;

      for(int i=0; i<n; i++){
          if(pre == 0){
              pre = 1;
          }
          if(suf == 0){
               suf = 1;
          }

          pre = pre * nums[i];
          suf = suf * nums[n-i-1];

          max = Math.max(max, Math.max(pre, suf)); 
      }
      return max;
  }
